-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class=>('title' == @sort)?'hilite p-3 mb-2 bg-warning text-dark':""}= link_to "Movie Title", :sort => "title", :id=> "title_header"
      %th{:class=>('rating' == @sort)?'hilite p-3 mb-2 bg-warning text-dark':""}= link_to "Rating", :sort => "rating"
      %th{:class=>('release_date' == @sort)?'hilite p-3 mb-2 bg-warning text-dark':""}= link_to "Release Date", :sort => "release_date", :id=> "release_date_header"
      %th{:class=>('description' == @sort)?'hilite p-3 mb-2 bg-warning text-dark':""}= link_to "More Info", :sort => "description"
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
